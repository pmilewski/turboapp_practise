<%= turbo_frame_tag :cookies_modal do %>
  <% unless session[:cookies_accepted] %>
    <div class="cookies-modal">
      <h1 class="font-bold text-4xl">Cookies#index</h1>
      <p>Find me in app/views/cookies/index.html.erb</p>
      <div class="flex justify-between px-20">
        <%= link_to :accept, cookies_path(cookies_accepted: true), data: { turbo: false }, class: "bg-green-700 rounded p-2" %>
        <%= link_to :reject, cookies_path(cookies_accepted: false), data: { turbo: false }, class: "bg-red-700  rounded p-2" %>
      </div>
    </div>
  <% end %>
<% end %>