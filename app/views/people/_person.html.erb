<div id="<%= dom_id person %>" class="w-full sm:w-auto my-5 space-y-5">
  <span class="hoverWrapper group">
    <%= person.first_name %>
    <%= person.last_name %>
    <div class="hoverContent bg-black text-white">
      <%= turbo_frame_tag dom_id(person, :thumbnail), loading: :lazy, target: "_top",
        src: hovercard_person_path(person) do %>
        Loading...
      <% end %>
    </div>
  </span>
  <details>
    <summary>
      <%= person.first_name %>
      <%= person.last_name %>
    </summary>
    <%= turbo_frame_tag dom_id(person, :thumbnail), loading: :lazy, 
        src: hovercard_person_path(person) do %>
      Loading...
    <% end %>
  </details>
</div>
