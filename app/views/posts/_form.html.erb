<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>
  <div>
  </div>
  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.textarea :body %>
  </div>
  <div data-controller="show-if" data-show-if-expected-value="passcode_protected" >
    <div>
      <%= form.label :access, style: "display: block" %>
      <%= form.select :access, Post.accesses.keys.map { |k| [k.humanize, k] },
        { include_blank: "Select an access" },
        data: { show_if_target: "trigger", action: "change->show-if#toggle" } %>
    </div>
    <div data-show-if-target="content">
      <%= form.label :passcode, style: "display: block" %>
      <%= form.text_field :passcode %>
    </div>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
