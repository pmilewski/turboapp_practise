<% content_for :title, "Editing customer" %>
<div>
  <h1 class="text-2xl font-bold mb-5">Editing customer</h1>
  <% if params[:attribute].present? %>
    <%= render "inplace_edit_form", customer: @customer %>
  <% else %>
    <%= render "form", customer: @customer %>
  <% end %>
  <div class="mt-5">
    <%= link_to "Show this customer", @customer, class: "px-4 py-2 bg-gray-100 rounded inline-block mr-2" %>
    <%= link_to "Back to customers", customers_path, class: "px-4 py-2 bg-gray-100 rounded inline-block" %>
  </div>
</div>
