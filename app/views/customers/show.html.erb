<% content_for :title, "Showing customer" %>
<div>
  <% if notice.present? %>
    <p class="p-3 bg-green-50 mb-5 text-green-500 rounded" id="notice"><%= notice %></p>
  <% end %>
  <h1 class="text-2xl font-bold mb-5">Showing customer</h1>
  <%= render @customer %>
  <div class="mt-5">
    <%= link_to "Edit this customer", edit_customer_path(@customer), class: "px-4 py-2 bg-gray-100 rounded inline-block mr-2" %>
    <%= link_to "Back to customers", customers_path, class: "px-4 py-2 bg-gray-100 rounded inline-block mr-2" %>
    <%= button_to "Destroy this customer", @customer, method: :delete, class: "px-4 py-2 bg-red-600 text-white rounded", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
