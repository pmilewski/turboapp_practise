<%= form_with(model: customer, class: "contents") do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 p-3 rounded mt-3">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>
      <ul class="list-disc ml-6">
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% Customer::EDITABLE_ATTRS.each do |attr| %>
    <div class="my-5">
      <%= form.label attr %>
      <%= form.text_field attr, class: "w-full px-3 py-2 border rounded" %>
    </div>
  <% end %>
  <div class="inline">
    <%= form.submit class: "px-4 py-2 bg-blue-600 text-white rounded" %>
  </div>
<% end %>
