<% content_for :title, "Customers" %>
<div>
  <% if notice.present? %>
    <p class="p-3 bg-green-50 mb-5 text-green-500 rounded" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center mb-5">
    <h1 class="text-2xl font-bold">Customers</h1>
    <%= link_to "New customer", new_customer_path, class: "btn btn-primary" %>
  </div>
  <div id="customers">
    <% if @customers.any? %>
      <% @customers.each do |customer| %>
        <div class="flex justify-between items-center py-3 border-b">
          <%= render customer %>
          <div>
            <%= link_to "Show", customer, class: "btn btn-secondary" %>
            <%= link_to "Edit", edit_customer_path(customer), class: "btn btn-secondary" %>
            <%= button_to "Destroy", customer, method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No customers found.</p>
    <% end %>
  </div>
</div>
